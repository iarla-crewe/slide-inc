<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="427dp"
        android:background="#A0A29F"
        app:layout_constraintBottom_toTopOf="@+id/requestHelp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </View>


    <TextView
        android:id="@+id/paymentText"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Personal Help"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/banner" />

    <TextView
        android:id="@+id/requestHelp"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="108dp"
        android:text="Request Professional Help"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="111dp" />


    <TextView
        android:id="@+id/categorizeIssue"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="204dp"
        android:text="Categorize Issue"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="199dp" />

    <TextView
        android:id="@+id/describeIssue"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="204dp"
        android:text="Describe Issue"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="328dp" />

    <Button
        android:id="@+id/requestHelpButton"
        android:layout_width="164dp"
        android:layout_height="0dp"
        android:layout_marginBottom="202dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>