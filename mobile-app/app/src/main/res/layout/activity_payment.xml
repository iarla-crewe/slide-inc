<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/paymentText"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="@string/payment"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/banner" />

    <TextView
        android:id="@+id/PersonalInfo"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="108dp"
        android:text="@string/personal_information"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="72dp" />

    <TextView
        android:id="@+id/FirstName"
        android:layout_width="136dp"
        android:layout_height="33dp"
        android:layout_marginEnd="256dp"
        android:text="@string/first_name_payment"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/LastName"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="16dp"
        android:text="@string/last_name_payment"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="136dp" />

    <TextView
        android:id="@+id/Country"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="204dp"
        android:text="@string/country"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="210dp" />


    <TextView
        android:id="@+id/CityView"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="12dp"
        android:text="@string/city"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="210dp" />

    <TextView
        android:id="@+id/ZipCode"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="204dp"
        android:text="@string/zip_code"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/EmailAddress"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="12dp"
        android:text="@string/email_address"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/CardInfo"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="204dp"
        android:text="@string/card_information"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="348dp" />

    <TextView
        android:id="@+id/CardNumber"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="204dp"
        android:text="@string/card_number"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:id="@+id/CVCnumber"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="12dp"
        android:text="@string/cvc"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="382dp" />

    <TextView
        android:id="@+id/MonthAndYear"
        android:layout_width="191dp"
        android:layout_height="34dp"
        android:layout_marginEnd="204dp"
        android:text="@string/month_and_year"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="428dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="164dp"
        android:layout_height="0dp"
        android:layout_marginBottom="202dp"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"/>
<!--        app:layout_constraintTop_toBottomOf="@+id/banner" />-->

</androidx.constraintlayout.widget.ConstraintLayout>